# UrbanSense Environment Configuration
# Copy this file to .env and update with your settings

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Application Environment (development, staging, production)
NODE_ENV=development

# Server Configuration
PORT=8080
HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION (Optional - for data persistence)
# =============================================================================

# Database URL (if using backend data storage)
# DATABASE_URL=postgresql://username:password@localhost:5432/urbansense
# DATABASE_URL=mongodb://localhost:27017/urbansense
# DATABASE_URL=sqlite:///data/urbansense.db

# =============================================================================
# SENSOR DATA CONFIGURATION
# =============================================================================

# Default sensor simulation settings
DEFAULT_SENSOR_COUNT=50
DEFAULT_SIMULATION_SPEED=1
DEFAULT_UPDATE_INTERVAL=1000

# Sensor thresholds for event detection
TEMPERATURE_HIGH_THRESHOLD=35
TEMPERATURE_LOW_THRESHOLD=5
AUDIO_HIGH_THRESHOLD=80
AIR_QUALITY_THRESHOLD=100
HUMIDITY_HIGH_THRESHOLD=90
ACCELEROMETER_THRESHOLD=0.8

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# TensorFlow settings (if using advanced AI features)
TF_CPP_MIN_LOG_LEVEL=2
CUDA_VISIBLE_DEVICES=0

# Model paths (if using pre-trained models)
# MODEL_PATH=./models/
# GNN_MODEL_PATH=./models/gnn/
# FUSION_MODEL_PATH=./models/fusion/

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Event notification settings
NOTIFICATIONS_ENABLED=true
NOTIFICATION_DURATION=8000
MAX_NOTIFICATIONS_QUEUE=5

# Emergency alert settings
EMERGENCY_EMAIL_ENABLED=false
EMERGENCY_SMS_ENABLED=false
EMERGENCY_WEBHOOK_URL=

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Weather API (for enhanced weather detection)
# WEATHER_API_KEY=your_weather_api_key
# WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Maps API (for enhanced location services)
# MAPS_API_KEY=your_maps_api_key

# Email service (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# SMS service (for emergency alerts)
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token
# TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Performance monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=30000

# Health check endpoints
HEALTH_CHECK_ENABLED=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Security (if deploying with authentication)
# JWT_SECRET=your_super_secret_jwt_key
# API_KEY=your_api_key
# CORS_ORIGIN=http://localhost:3000

# Rate limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# GitHub Pages deployment
GITHUB_PAGES_URL=https://vrindabansal.github.io/urbansense/

# CDN settings (for production)
# CDN_URL=https://cdn.yourdomain.com
# STATIC_URL=/static

# Analytics (optional)
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# MIXPANEL_TOKEN=your_mixpanel_token

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug mode
DEBUG=true

# Hot reload
HOT_RELOAD=true

# Mock data
USE_MOCK_DATA=true
MOCK_EVENTS_ENABLED=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database
# TEST_DATABASE_URL=sqlite:///:memory:

# Test settings
PYTEST_TIMEOUT=30
COVERAGE_THRESHOLD=80

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env in your project root
# 2. Update values according to your environment
# 3. Never commit .env files to version control
# 4. For production, use secure values and enable appropriate features
# 5. Most settings are optional - the basic demo works without configuration